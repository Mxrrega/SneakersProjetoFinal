@model IEnumerable<SneakersProjetoFinal.Models.Cadastro>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/Cadastro.css">

<h1>Cadastre-se</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPFCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPFCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
