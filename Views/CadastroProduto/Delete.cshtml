@model SneakersProjetoFinal.Models.CadastroProduto

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/CSSCadastroProduto.css" />

<button class="button">
    Excluir Produto
</button>
<hr />
<div class="table1" >
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagemProduto)
        </dd>
    </dl>
    <h5>Tem certeza de que deseja excluir isto?</h5>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
    <div>
        <a asp-action="Index" class="voltardeleteproduto">Voltar</a>
    </div>
</div>
