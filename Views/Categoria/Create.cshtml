@model SneakersProjetoFinal.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/CSSCategoria.css">

<button class="button">
    Cadastre uma Categoria
</button>
<hr />
<table class="table">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeCategoria" class="control-label"></label>
                <input asp-for="NomeCategoria" class="form-control" />
                <span asp-validation-for="NomeCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</table>
<br />
<div>
    <a asp-action="Index" class="voltarcreatecategoria">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
