@model SneakersProjetoFinal.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/CSSCategoria.css" />

<button class="button">
    Excluir Categoria
</button>
<hr />
<div class="table1">
